<Header>:
    cols: 2
    opacity: 1
    size_hint_y: None
    height: 50
    pos_hint: {'top':1}
    GridLayout:
        id: left
        padding: [0, 5, 75, 10]
        cols: 3
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: root.top_left
        Image:
            id: drone_battery
            source: root.drone_battery
        Image:
            id: drone_connection
            source: root.drone_connection
        Image:
            id: drone_gps
            source: root.drone_gps
    GridLayout:
        id: right
        padding: [75, 5, 0, 10]
        cols: 3
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: root.top_right
        Image:
            id: controller_gps
            source: root.controller_gps
        Image:
            id: wifi_connection
            source: root.wifi_connection
        Image:
            id: controller_battery
            source: root.controller_battery
